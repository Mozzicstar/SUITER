{
  "version": 2,
  "buildCommand": "mkdir -p public && cp -r frontend/* public/ && echo 'Frontend built'",
  "outputDirectory": "public",
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }
      ]
    }
  ],
  "functions": {
    "api/proxy.js": {
      "memory": 512,
      "maxDuration": 30
    }
  }
}
